@{
    ViewBag.Title = "Thiết lập chung";
}

<h3 style="margin-left:10px">Công ty</h3>

@Html.DevExpress().FormLayout(settings => {
    settings.Name = "CompanyFormLayout";
    settings.Items.Add(item => {       
        item.Caption = "Danh sách công ty";
        item.CaptionSettings.Location = LayoutItemCaptionLocation.Top;
        item.SetNestedContent(() =>
        {
            ViewContext.Writer.Write(Html.Action("CompanyGridViewPartial"));
        });
    });
}).GetHtml()