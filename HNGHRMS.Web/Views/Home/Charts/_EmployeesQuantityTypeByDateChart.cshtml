@Html.DevExpress().Chart(chartSettings =>
{
    chartSettings.Name = "EmployeesQuantityTypeByDateChart";
    chartSettings.Width = 1000;
    chartSettings.Height = 300;
    chartSettings.CallbackRouteValues = new { Controller = "Home", Action = "GetEmployeesQuantityTypeByDateChart" };
    chartSettings.SeriesTemplate.ChangeView(DevExpress.XtraCharts.ViewType.Bar);
    chartSettings.SeriesDataMember = "Types";
    chartSettings.SeriesTemplate.ArgumentDataMember = "Company";
    chartSettings.SeriesTemplate.ValueDataMembers[0] = "Quantity";
    chartSettings.EmptyChartText.Text = "Không có dự liệu";
    //
    Axis2D axisY = ((XYDiagram)chartSettings.Diagram).AxisY;
    axisY.NumericScaleOptions.AutoGrid = true;
    axisY.NumericScaleOptions.GridSpacing = 1;
  
    axisY.Title.Text = "Số nhân viên";
    axisY.Interlaced = false;
    
    axisY.Title.Visibility = DefaultBoolean.True;
}).Bind(Model).GetHtml()
