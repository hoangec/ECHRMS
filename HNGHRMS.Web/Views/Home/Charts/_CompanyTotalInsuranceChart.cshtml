@Html.DevExpress().Chart(chartSettings =>
{
    chartSettings.Name = "CompanyInsuranceChart";
    chartSettings.CallbackRouteValues = new { Controller = "Home", Action = "GetCompanyTotalInsuranceChart" };
    chartSettings.Width = 900;
    chartSettings.Height = 400;
    Series series = new Series("Companies", DevExpress.XtraCharts.ViewType.Pie);
    if(ViewData["Options"] == "P")
    {
        series.Label.TextPattern = "{A}: {VP:p0}";
    }
    else
    {
        series.Label.TextPattern = "{A}: {V:C0}";
    }
    chartSettings.EmptyChartText.Text = "Không có dự liệu";
    series.ArgumentDataMember = "Name";
    series.ValueDataMembers[0] = "Area";
    chartSettings.Series.Add(series);
}).Bind(Model).GetHtml()
