@{
	var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "CompanyReportGridView";
        settings.CallbackRouteValues = new { Controller = "Home", Action = "CompanyReportByDate" };
		
        settings.SettingsPager.PageSize = 20;
		settings.SettingsPager.Visible = true;
		settings.Settings.ShowGroupPanel = false;
		settings.Settings.ShowFilterRow = false;
		settings.SettingsBehavior.AllowSelectByRowClick = true;
        settings.KeyFieldName = "CompanyId";
        
		settings.Columns.Add("CompanyId");
		settings.Columns.Add("CompanyName");
        settings.Columns.Add(col => {
            col.FieldName = "CurrentEmployees";
            col.ColumnType = MVCxGridViewColumnType.HyperLink;
            col.PropertiesEdit.DisplayFormatString = "n0";
            col.SetDataItemTemplateContent(item => {
                Html.DevExpress().HyperLink(link =>
                {
                    string args = item.KeyValue.ToString() +"-" + DataBinder.Eval(item.DataItem, "DateReport").ToString().Replace('/', '-');
                    link.NavigateUrl = Url.Action("CurrentEmployeesReport", "Home", new { DataQuery = args });
                    link.Properties.Text = item.Text;   
                }).Render();
            });
        });
        settings.Columns.Add(col => {
            col.FieldName = "NewEmployees";
            col.ColumnType = MVCxGridViewColumnType.HyperLink;
            col.PropertiesEdit.DisplayFormatString = "n0";
            col.SetDataItemTemplateContent(item => {
                Html.DevExpress().HyperLink(link =>
                {
                    string args = item.KeyValue.ToString() + "-" + DataBinder.Eval(item.DataItem, "DateReport").ToString().Replace('/','-');
                    link.NavigateUrl = Url.Action("NewEmployeesReport", "Home", new { DataQuery = args });
                    link.Properties.Text = item.Text;    
                }).Render();
            });
        });
        settings.Columns.Add(col => {
            col.FieldName = "TerminatedEmployees";
            col.ColumnType = MVCxGridViewColumnType.HyperLink;
            col.PropertiesEdit.DisplayFormatString = "n0";
            col.SetDataItemTemplateContent(item => {
                Html.DevExpress().HyperLink(link =>
                {
                    string args = item.KeyValue.ToString() + "-" + DataBinder.Eval(item.DataItem, "DateReport").ToString().Replace('/', '-');
                    link.NavigateUrl = Url.Action("TerminatedEmployeesReport", "Home", new { DataQuery = args });
                    link.Properties.Text = item.Text;  
                }).Render();
            });
                
        });
        
        settings.Columns.Add(col => {
            col.FieldName = "TotalSalary";            
            col.PropertiesEdit.DisplayFormatString = "C0";
        });
        settings.Columns.Add("DateReport").PropertiesEdit.DisplayFormatString= "dd/MM/yyyy";
    });
}
@grid.Bind(Model).GetHtml()