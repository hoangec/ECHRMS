@Html.DevExpress().ComboBox(
            settings =>
            {
                settings.Name = "cmbEmployeeList";
                settings.Width = 220;
                settings.SelectedIndex = 0;
                settings.Properties.DropDownWidth = 550;
                settings.Properties.DropDownStyle = DropDownStyle.DropDownList;

                settings.CallbackRouteValues = new { Controller = "Employee", Action = "EmployeeList" };
                settings.Properties.CallbackPageSize = 30;
                settings.Properties.IncrementalFilteringDelay = 200;
                settings.Properties.IncrementalFilteringMode = IncrementalFilteringMode.Contains;
                settings.Properties.TextFormatString = "{0} - {1}";
                settings.Properties.ValueField = "EmployeeId";
                settings.Properties.ValueType = typeof(int);                
                settings.Properties.Columns.Add("EmployeeId", "Mã CĐ", 130);
                settings.Properties.Columns.Add("Name", "Họ tên", 130);
                settings.Properties.Columns.Add("CompanyName", "Công ty", 130);
                settings.Properties.Columns.Add("JoinedDate", "Ngày vào làm", 130);
                settings.Properties.ClientSideEvents.ValueChanged = "OnCmbEmployeeIndexChanged";
                //settings.Properties.ClientSideEvents.Init = "OnCmbShareHolderListInit";
                settings.Properties.ClientSideEvents.EndCallback = "OnCmbEmployeeListEndCallBack";
}).BindList(Model).GetHtml()
